<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Shape for small components (e.g., chips, small buttons) -->
    <style name="ShapeAppearance.RecipeManager.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Shape for medium components (e.g., cards, dialogs) -->
    <style name="ShapeAppearance.RecipeManager.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Shape for large components (e.g., sheets, modals) -->
    <style name="ShapeAppearance.RecipeManager.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>
